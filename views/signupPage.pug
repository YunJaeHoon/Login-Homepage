doctype html
html
  head
    title login
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='/style/signupPage.css' rel='stylesheet')

    // 폰트
    link(href='https://hangeul.pstatic.net/hangeul_static/css/nanum-square-neo.css' rel='stylesheet')

  body
    #container
      #titleText_area Sign up
      form#form_area(action='/signUp' method='post')
        #input_area
          div(style='width: 20%; margin-right: 10px;')
            .input.subject ID&nbsp;:
            .input.subject Password&nbsp;:
            .input.subject 닉네임&nbsp;:
            .input.subject 한줄 소개&nbsp;:

          div(style='width: 69%;')
            input#id.input.enter_text(type='text' name='id' placeholder='아이디' disabled=isDisabled value=accountId)
            #id_text.description *&nbsp;아이디는 8자 이상, 12자 이하여야 합니다.
            input#password.input.enter_text(type='password' name='password' placeholder='비밀번호' value=accountPassword)
            #password_text.description *&nbsp;비밀번호는 영문과 숫자의 조합으로 8자 이상, 12자 이하여야 합니다.
            input#nickname.input.enter_text(type='text' name='nickname' placeholder='닉네임' value=accountNickname)
            #nickname_text.description *&nbsp;닉네임은 10자 이하여야 합니다.
            div(style='position: relative; width: 100%; height: 40px;')
              textarea#introduce.input.enter_text(type='text' name='introduce' placeholder='한줄 소개') #{accountIntroduce}
              #introduce_length #{count}/100
        
        if isDisplay
          #duplication_text.description(style='color: red; display: block;') *&nbsp;이미 존재하는 id입니다&nbsp;*
        else
          #duplication_text.description(style='color: red; display: none;') *&nbsp;이미 존재하는 id입니다&nbsp;*

        input#login_button(type='submit' disabled='disabled' value=button_text)

    script(src='/script/signUpPage.js')
